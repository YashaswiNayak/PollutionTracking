<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/background_color">

    <!-- Title Text -->
    <TextView
        android:id="@+id/healthTipsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Tips for Dealing with Pollution:"
        android:textColor="@color/primary_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Health Tips Items -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"
        android:backgroundTint="@color/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip 1: Avoid outdoor activities during high pollution levels, especially in the morning and evening."
            android:textSize="16sp"
            android:textColor="@color/primary_text_color"
            android:layout_marginBottom="8dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"
        android:backgroundTint="@color/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip 2: Wear a mask or use a respirator when going outside in polluted areas."
            android:textSize="16sp"
            android:textColor="@color/primary_text_color"
            android:layout_marginBottom="8dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"

        android:backgroundTint="@color/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip 3: Keep your windows closed and use air purifiers indoors during high pollution periods."
            android:textSize="16sp"
            android:textColor="@color/primary_text_color"
            android:layout_marginBottom="8dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"
        android:backgroundTint="@color/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip 4: Drink plenty of water to help your body remove toxins from the air."
            android:textSize="16sp"
            android:textColor="@color/primary_text_color"
            android:layout_marginBottom="8dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"
        android:backgroundTint="@color/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip 5: Monitor air quality levels regularly to plan outdoor activities and stay safe."
            android:textSize="16sp"
            android:textColor="@color/primary_text_color"
            android:layout_marginBottom="8dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"
        android:backgroundTint="@color/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip 6: For vulnerable groups (children, elderly, and those with respiratory issues), limit outdoor exposure during high pollution levels."
            android:textSize="16sp"
            android:textColor="@color/primary_text_color"
            android:layout_marginBottom="8dp"/>

    </androidx.cardview.widget.CardView>

    <!-- Add additional health tips in the same format -->

</LinearLayout>
